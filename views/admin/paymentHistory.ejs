<% layout('layouts/base') -%>

  <div class="row bg">
<div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>User Transactions </h2>
                                        
                    <div class="clearfix"></div>
                  </div>

                  <div class="x_content">
                    <div class="table-responsive">
                        <p id="date_filter">
                            <span id="date-label-from" class="date-label">From </span>:<input type="text" id="min" name="min" class="date_range_filter date">&nbsp;&nbsp;&nbsp;<span id="date-label-to" class="date-label">To </span>:<input type="text" id="max" name="max" class="date_range_filter date">
                        </p>
                      <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
                        <thead>
                          <tr class="headings">
                            
                            <th class="column-title1">UserName</th>
                            <th class="column-title1">Amount</th>
                            <th class="column-title1">Date</th>
                            <th class="column-title1">Credit/Debit</th>
                            <th class="column-title1">Type</th>
                          </tr>
                        </thead>

                        <tbody>
                          <%
                          if(transactions.length >0){
                            transactions.forEach(function(trans){ %>
                          
                          <tr class="even pointer">
                            <td class=" "><%=userDetails.username%></td>
                            <td class=" "><%=trans.amount%></td>
                             <td> <%=new Date(trans.trans_id).toDateString()%></td>
                             <td><%=trans.type%></td>
                            <td class="last">
                                <%=trans.details%>
                            </td>
                          </tr>
                          <% }) }%>
                        </tbody>
                      </table>
                    </div>
							
						
                  </div>
                </div>
              </div>
          </div>
