<% layout('layouts/base') -%>
<div class="row">
  
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Charge Percentage</h2>

        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br />
        <form
          id="betform"
          data-parsley-validate
          class="form-horizontal form-label-left"
          method="POST"
          action="update-percentage"
        >
          <div class="form-group">
            <label
              class="control-label col-md-3 col-sm-3 col-xs-12"
              for="first-name"
              >Current Charge Percentage
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <input
              disabled
                type="text"
                class="form-control col-md-7 col-xs-12"
            value="<%=percentage%>"
              />
            </div>
          </div>
          <div class="form-group">
            <label
              class="control-label col-md-3 col-sm-3 col-xs-12"
              for="first-name"
              >New Charge Percentage<span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <input
                type="text"
                name="percentage"
                id="percentage"
                required="required"
                class="form-control col-md-7 col-xs-12"
                onkeypress="return isNumberKey(event);"
                onkeyup="return isGreater(event)"
              />
            </div>
          </div>

          <div class="ln_solid"></div>
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <button type="submit" class="btn btn-success">Submit</button>
              <a class="btn btn-success pull-right" href="/admin/users">Back</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  function isNumberKey(evt) {
    var charCode = evt.which ? evt.which : evt.keyCode;
    if (charCode > 31 && (charCode < 48 || charCode > 57)) return false;

    return true;
  }

  var isGreater = (evt) => {
    console.log(evt.target.value);
    if (evt.target.value == 0) $("#percentage").val("");
  };
 
</script>
